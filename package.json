{
  "name": "express-pug-starter",
  "version": "2.2.0",
  "description": "sbolel/express-pug-starter",
  "license": "MIT",
  "homepage": "https://sbolel.github.io/express-pug-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:sbolel/express-pug-starter.git"
  },
  "author": {
    "name": "Sinan Bolel",
    "email": "sinanbolel@gmail.com",
    "url": "https://sinanbolel.com"
  },
  "contributors": [],
  "main": "server/index.js",
  "engines": {
    "node": "~6.9.0",
    "npm": "~3.10.8"
  },
  "scripts": {
    "debug": "nodemon server/index.js",
    "start": "run-s sass start:prod",
    "start:prod": "node server/index.js",
    "sass": "gulp sass",
    "sass:watch": "gulp sass:watch",
    "lint:js": "eslint -c .eslintrc.yml ./**/*.js --ignore-path .eslintignore",
    "lint:scss": "scss-lint -c .scss-lint.yml ./app/**/*.scss",
    "lint:standard": "standard",
    "pretest": "run-p lint:standard lint:js",
    "test": "cross-env NODE_ENV=test run-s test:cover test:report",
    "test:cover": "istanbul cover node_modules/.bin/_mocha -R test/**/*",
    "test:report": "istanbul report --config .istanbul.yml --root coverage/"
  },
  "dependencies": {
    "express": "4.15.2",
    "path": "0.12.7",
    "pug": "2.0.0-rc.1",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "cross-env": "4.0.0",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "7.0.0",
    "eslint-plugin-standard": "3.0.1",
    "gulp": "3.9.1",
    "gulp-banner": "0.1.3",
    "gulp-sass": "3.1.0",
    "istanbul": "^0.4.5",
    "mocha": "3.3.0",
    "node-sass": "4.5.2",
    "nodemon": "1.11.0",
    "npm-run-all": "^4.0.2",
    "opn": "5.0.0",
    "scss-lint": "0.0.0",
    "standard": "10.0.2",
    "supertest": "3.0.0",
    "webpack": "2.5.1"
  },
  "optionalDependencies": {
    "contentful": "4.3.0",
    "firebase": "3.9.0"
  },
  "keywords": [
    "chai",
    "cms",
    "compass",
    "contentful",
    "express",
    "expressjs",
    "firebase",
    "generator",
    "jade",
    "mocha",
    "node",
    "pug",
    "seed",
    "skeleton",
    "standard",
    "starter"
  ],
  "standard": {
    "env": [
      "mocha"
    ],
    "exclude": [
      "coverage"
    ]
  },
  "sasslintConfig": ".scss-lint.yml"
}
